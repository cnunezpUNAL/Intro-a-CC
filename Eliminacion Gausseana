#include <iostream>
#include <stdio.h>
#include <cmath>
#include <functional>
#define _USE_MATH_DEFINES
using namespace std;

void EliGauss(double **A, int n){
    double y,z;
    for(int i=0; i<n; i++){
        if(A[i][i]==0){
            for(int j=0; j<n; j++){
            double* I=A[i];
            if(A[j][i]!=0){
            A[i]=A[j];
            A[j]=I;
               }
                
            }
        }
        
            y=A[i][i];
            for(int r=i+1; r<n; r++){
             z=A[r][i]/y;
             if(A[r][i]!=0)
             for(int j=i; j<n; j++){
                A[r][j]=A[r][j]-(z*A[i][j]); 
             }
            }
        
    }
    for(int i=0; i<n; i++){
    y=A[i][i];
    for(int j=0; j<n; j++)
    A[i][j]=A[i][j]/y;
    }
}













int main()
{
    int n=3;
double **A=new double*[n];
for(int i=0; i<n; i++)
A[i]=new double[n];

A[0][0] =  0;  A[0][1] = -3;  A[0][2] = -5;
A[1][0] =  3;  A[1][1] = -1;  A[1][2] = -2;
A[2][0] =  1;  A[2][1] =  2;  A[2][2] =  4;

EliGauss(A,n);
for(int i=0; i<n; i++){
   cout<<endl;
   for(int j=0; j<n; j++)
       cout<<A[i][j]<<"  ";
   
}




}

